{
    "name": "dragonbe/azure-servicebus-php",
    "description": "This project provides a PHP client to interact with an Azure Service Bus",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Dragonbe\\AzureServicebusPhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dragonbe\\AzureServicebusPhpTest\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "M. van Dam",
            "email": "dragonbe+github@gmail.com",
            "homepage": "https://www.dragonbe.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4||^8.0",
        "ext-json": "*",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts-descriptions": {
        "asb-sniff": "Check for coding standards violations with PHP_CodeSniffer",
        "asb-test": "Perform all unit tests with PHPUnit"
    },
    "scripts": {
        "asb-sniff": "phpcs",
        "asb-test": "phpunit"
    }
}
